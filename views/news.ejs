<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= category.charAt(0).toUpperCase() + category.slice(1) %> News</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="/styles/main.css" rel="stylesheet">
</head>
<body>
    <!-- Hero Section -->
    <header class="hero-section text-center text-white bg-dark py-4">
        <div class="container">
            <h1 class="display-5 fw-bold"><%= category.charAt(0).toUpperCase() + category.slice(1) %> News</h1>
            <p class="lead">Stay updated with the latest articles in <%= category %>.</p>
        </div>
    </header>

    <!-- Articles Section -->
    <main class="container my-5">
        <% if (articles.length > 0) { %>
            <div class="row g-4">
                <% articles.forEach(article => { %>
                    <div class="col-md-4">
                        <div class="card shadow-sm h-100">
                            <% if (article.image) { %>
                                <img src="<%= article.image %>" class="card-img-top" alt="<%= article.title %>">
                            <% } else { %>
                                <img src="/images/deaf.webp" class="card-img-top" alt="Default News">
                            <% } %>
                            <div class="card-body d-flex flex-column">
                                
                                <h5 class="card-title"><%= article.title %></h5>
                                 <p style="color: darkslateblue;">Publish at - <%= article.publishedAt %></p>
                                <p class="card-text"><%= article.description || 'No description available.' %></p>
                                <a href="<%= article.url %>" target="_blank" class="btn btn-primary mt-auto">Read More</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="text-center text-muted">No articles found for this category. Please check back later.</p>
        <% } %>
        <div class="mt-4 text-center">
            <a href="/" class="btn btn-secondary">Back to Categories</a>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-center text-white py-3">
        <p>News Aggregator &copy; <%= new Date().getFullYear() %>. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
